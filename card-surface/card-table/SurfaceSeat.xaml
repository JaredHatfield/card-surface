<s:SurfaceUserControl x:Class="CardTable.SurfaceSeat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
    xmlns:local="clr-namespace:CardTable" Height="220" Width="326">
    <Grid x:Name="MainGrid">
        <Grid x:Name="JoinButton">
            <s:SurfaceButton Content="Join!" Width="100" Height="25" Click="SurfaceButton_Click"/>
        </Grid>
        <Grid x:Name="SeatPasswordGrid" Visibility="Hidden">
            <Label x:Name="JoinDirections" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Please enter this seat code to join."/>
            <Label x:Name="SeatPassword" Margin="0,100,0,0" Width="100" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="Invalid"/>
        </Grid>
    </Grid>
</s:SurfaceUserControl>
