<s:SurfaceUserControl x:Class="CardTable.SlideDeck"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="http://schemas.microsoft.com/surface/2008"
                  >
    <Grid Name="MainGrid">
        <!-- TODO: This should really not have a width set, it should take up the entire space on its own. Hopefully monitors don't go above 8000 x 8000 anytime soon. -->
        <Rectangle Name="MyRectangle" HorizontalAlignment="Center" VerticalAlignment="Center" Width="8000" Height="8000" Fill="Black" Opacity=".7"></Rectangle>
        <Label Name="close" MouseDown="ClosePopup_MouseDown" VerticalAlignment="Top" HorizontalAlignment="Right" FontWeight="Bold" FontSize="26" Margin="0,10,10,0" Foreground="Red">X</Label>
        <WebBrowser Source="http://docs.google.com/present/embed?id=dfq7vs3n_247hpdtgff7&amp;size=l" Height="559" Width="700" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</s:SurfaceUserControl>
